{
  "name": "propertypro-lite",
  "version": "1.0.0",
  "description": "Property Pro Lite is a platform where people can create and/or search properties for sale or rent.",
  "main": "app.js",
  "dependencies": {
    "bcrypt": "^3.0.6",
    "body-parser": "^1.19.0",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "faker": "^4.1.0",
    "jsonwebtoken": "^8.5.1",
    "make-runnable": "^1.3.6",
    "moment": "^2.24.0",
    "morgan": "^1.9.1",
    "nodemailer": "^6.3.0",
    "pg": "^7.11.0",
    "pg-promise": "^8.7.3",
    "socket.io": "^2.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.0",
    "@babel/core": "^7.7.0",
    "@babel/node": "^7.7.0",
    "@babel/preset-env": "^7.7.1",
    "@babel/register": "^7.7.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "coveralls": "^3.0.4",
    "cross-env": "^6.0.3",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.18.0",
    "istanbul": "^0.4.5",
    "mocha": "^6.1.4",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.19.4",
    "nyc": "^14.1.1",
    "sinon": "^7.5.0",
    "sinon-chai": "^3.3.0",
    "supertest": "^4.0.2"
  },
  "scripts": {
    "clean": "rm -rf build && mkdir build",
    "build-babel": "babel -d ./build SERVER -s",
    "build": "npm run clean && npm run build-babel",
    "start": "npm run build && node ./build/app.js",
    "start:dev": "nodemon --exec babel-node SERVER/app.js",
    "test": "nyc --reporter=html --reporter=text mocha --timeout 150000 --require @babel/register SERVER/Tests  --exit",
    "pre-test": "node db dropUsersTable && node db createUsersTable && node db dropPropertyTable && node db createPropertyTable && node db dropFlagsTable && node db createFlagsTable",
    "drop-users": "node db dropUsersTable",
    "create-users": "node db createUsersTable",
    "drop-property": "node db dropPropertyTable",
    "create-property": "node db createPropertyTable",
    "drop-flags": "node db dropFlagsTable",
    "create-flags": "node db createFlagsTable",
    "users-table": "node db dropUsersTable && node db createUsersTable",
    "property-table": "node db dropPropertyTable && node db createPropertyTable",
    "flags-table": "node db dropFlagsTable && node db createFlagsTable",
    "coverage": "nyc report --reporter=text-lcov --reporter=lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/funmi5/PropertyPro-Lite.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/funmi5/PropertyPro-Lite/issues"
  },
  "homepage": "https://github.com/funmi5/PropertyPro-Lite#readme"
}
